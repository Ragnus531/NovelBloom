@inherits LayoutComponentBase
@using NovelBloom.Styles;

@* Required *@
<MudThemeProvider DefaultScrollbar="true" Theme="@_themeDefinition" />

<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout Style="height: 100vh;">
    <MudAppBar Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.MenuBook" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        My Application
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Style="@($"color:{Colors.Gray.Lighten5}; background:{_themeDefinition.PaletteLight.Black}; min-height: 100vh; display: flex; flex-direction: column;")">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    MudTheme _themeDefinition = new MainTheme();
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
